<window>
  <id>11</id>
  <defaultcontrol>8</defaultcontrol>
  <controls>
    <control>
      <description>videowindow</description>
      <type>videowindow</type>
      <id>20</id>
      <posx>0</posx>
      <posy>0</posy>
      <width>720</width>
      <height>576</height>
    </control>

    <control>
      <description>top left mover</description>
      <type>mover</type>
      <id>8</id>
      <posx>0</posx>
      <posy>0</posy>
      <texturefocus>calibrate-topleft-focus.png</texturefocus>
      <texturenofocus>calibrate-topleft.png</texturenofocus>
    </control>

    <control>
      <description>right bottom mover</description>
      <type>mover</type>
      <id>9</id>
      <posx>700</posx>
      <posy>500</posy>
      <texturefocus>calibrate-bottomright-focus.png</texturefocus>
      <texturenofocus>calibrate-bottomright.png</texturenofocus>
    </control>

    <control>
      <description>subtitle position mover</description>
      <type>mover</type>
      <id>10</id>
      <posx>200</posx>
      <posy>500</posy>
      <texturefocus>calibrate-subtitles-focus.png</texturefocus>
      <texturenofocus>calibrate-subtitles.png</texturenofocus>
    </control>

    <control>
      <description>pixel aspect ratio box</description>
      <type>resize</type>
      <id>11</id>
      <posx>0</posx>
      <posy>270</posy>
      <width>288</width>
      <height>288</height>
      <texturefocus>calibrate-pixelratio-focus.png</texturefocus>
      <texturenofocus>calibrate-pixelratio.png</texturenofocus>
    </control>

    <control>
      <description>OSD Y Offset mover</description>
      <type>mover</type>
      <id>12</id>
      <posx>200</posx>
      <posy>500</posy>
      <texturefocus>calibrate-subtitles-focus.png</texturefocus>
      <texturenofocus>calibrate-subtitles.png</texturenofocus>
      <colorkey>FFFF00FF</colorkey>
      <colordiffuse>FFFFFFFF</colordiffuse>
    </control>

    <control>
      <description>rectangle image</description>
      <type>image</type>
      <id>1</id>
      <posx>0</posx>
      <posy>256</posy>
      <width>720</width>
      <height>57</height>
      <texture>bluebar.png</texture>
    </control>

    <control>
      <description>coordinates label</description>
      <type>label</type>
      <id>2</id>
      <posx>55</posx>
      <posy>260</posy>
      <label>-</label>
      <font>font14</font>
    </control>

    <control>
      <description>help information</description>
      <type>label</type>
      <id>3</id>
      <posx>55</posx>
      <posy>280</posy>
      <label>-</label>
      <font>font14</font>
    </control>

  </controls>

</window>

