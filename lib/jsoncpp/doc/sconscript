##                                SUBST_DICT = {
##                                    '%JSONCPP_VERSION%' : env['JSONCPP_VERSION'],
##                                    '%TOPDIR%' : env.Dir('#').abspath,
##                                    '%DOC_TOPDIR%' : str(doc_topdir) } )
##    doc_cmd = env.Doxygen( doxyfile )
##    alias_doc_cmd = env.Alias('doc', doc_cmd )
##    env.AlwaysBuild(alias_doc_cmd)
##
