  AC_CHECK_LIB([lzo],       [main],, AC_MSG_ERROR(ERROR: Could not find either liblzo or liblzo2 - one of these must be present))
  )
AC_CHECK_LIB([cdio],        [main],, AC_MSG_ERROR($missing_library))

