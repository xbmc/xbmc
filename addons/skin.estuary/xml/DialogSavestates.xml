						<top>255</top>
						<width>290</width>
						<height>40</height>
						<label>$INFO[ListItem.Label][CR][COLOR grey]$INFO[ListItem.Duration][/COLOR]</label>
						<font>font12</font>
						<shadowcolor>text_shadow</shadowcolor>
						<align>center</align>
					</control>
				</control>
