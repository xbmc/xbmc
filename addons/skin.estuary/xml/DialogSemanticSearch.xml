<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="10161">
	<defaultcontrol always="true">2</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<depth>DepthDialog</depth>
	<controls>
		<!-- Main dialog background -->
		<control type="group">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>1200</width>
			<height>800</height>

			<!-- Background image -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1200</width>
				<height>800</height>
				<texture border="20">dialogs/dialog-bg.png</texture>
			</control>

			<!-- Heading -->
			<control type="label" id="1">
				<left>30</left>
				<top>20</top>
				<width>1140</width>
				<height>40</height>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>Semantic Search</label>
			</control>

			<!-- Search input field -->
			<control type="edit" id="2">
