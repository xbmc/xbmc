					<!-- Relevance score -->
					<control type="label">
						<left>600</left>
						<top>10</top>
						<width>90</width>
						<height>25</height>
						<font>font10</font>
						<textcolor>green</textcolor>
						<align>right</align>
						<label>$INFO[ListItem.Property(relevance_score)]</label>
					</control>
				</focusedlayout>
			</control>

			<!-- Details panel (right side) -->
			<control type="group" id="4">
				<left>740</left>
				<top>190</top>
				<width>430</width>
