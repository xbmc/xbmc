				<!-- Context preview panel -->
				<control type="textbox" id="5">
					<left>10</left>
					<top>50</top>
					<width>410</width>
					<height>490</height>
					<font>font10</font>
					<textcolor>lightgrey</textcolor>
					<label>Select a result to view context</label>
					<autoscroll time="3000" delay="2000" repeat="10000">true</autoscroll>
					<visible>false</visible>
				</control>

				<!-- Placeholder when no result selected -->
				<control type="label">
					<left>10</left>
					<top>250</top>
					<width>410</width>
					<height>50</height>
					<font>font12</font>
					<textcolor>grey</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>Select a result to view details</label>
					<visible>!Control.IsVisible(5)</visible>
				</control>
			</control>

			<!-- Help text at bottom -->
			<control type="label">
				<left>30</left>
				<top>750</top>
				<width>1140</width>
				<height>30</height>
				<font>font10</font>
				<textcolor>grey</textcolor>
				<align>center</align>
				<label>Press Enter/Select to jump to timestamp â€¢ Context menu for more options</label>
			</control>
