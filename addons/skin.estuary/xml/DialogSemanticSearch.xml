				<label>Enter search query...</label>
				<onup>10</onup>
				<ondown>3</ondown>
				<onleft>6</onleft>
				<onright>6</onright>
			</control>

			<!-- Clear button -->
			<control type="button" id="10">
				<left>940</left>
				<top>70</top>
				<width>120</width>
				<height>50</height>
