				<font>font12</font>
				<label>Close</label>
				<texturefocus border="5">buttons/button-focus.png</texturefocus>
				<texturenofocus border="5">buttons/button-nofocus.png</texturenofocus>
				<onup>7</onup>
				<ondown>3</ondown>
				<onleft>10</onleft>
				<onright>2</onright>
			</control>

			<!-- Search options row -->
			<control type="group">
				<left>30</left>
				<top>130</top>
				<width>1140</width>
				<height>40</height>

				<!-- Search mode toggle button -->
				<control type="button" id="6">
					<left>0</left>
					<top>0</top>
					<width>200</width>
					<height>40</height>
					<font>font12</font>
					<label>Mode: Hybrid</label>
					<texturefocus border="5">buttons/button-focus.png</texturefocus>
					<texturenofocus border="5">buttons/button-nofocus.png</texturenofocus>
					<onup>2</onup>
					<ondown>3</ondown>
					<onleft>7</onleft>
					<onright>7</onright>
				</control>

