					<top>0</top>
					<width>200</width>
					<height>40</height>
					<font>font12</font>
					<label>Filter: All</label>
					<texturefocus border="5">buttons/button-focus.png</texturefocus>
					<texturenofocus border="5">buttons/button-nofocus.png</texturenofocus>
					<onup>2</onup>
					<ondown>3</ondown>
					<onleft>6</onleft>
					<onright>9</onright>
				</control>

				<!-- Result count label -->
				<control type="label" id="12">
					<left>420</left>
					<top>0</top>
					<width>300</width>
					<height>40</height>
					<font>font12</font>
					<textcolor>grey</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>0 results</label>
