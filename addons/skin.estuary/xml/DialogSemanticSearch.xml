					<textcolor>grey</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>Ready</label>
				</control>
			</control>

			<!-- Progress indicator -->
			<control type="progress" id="8">
				<left>30</left>
				<top>175</top>
				<width>1140</width>
				<height>8</height>
				<texturebg border="3">progress/texturebg.png</texturebg>
				<midtexture border="3">progress/midtexture.png</midtexture>
				<visible>false</visible>
			</control>

			<!-- Results list -->
			<control type="panel" id="3">
				<left>30</left>
				<top>190</top>
				<width>700</width>
				<height>550</height>
				<onup>6</onup>
				<ondown>6</ondown>
				<onleft>4</onleft>
				<onright>4</onright>
				<pagecontrol>-</pagecontrol>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<itemlayout height="110" width="700">
					<!-- Result item layout (not focused) -->
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>700</width>
						<height>110</height>
						<texture border="5">lists/separator.png</texture>
					</control>

					<!-- Thumbnail -->
					<control type="image">
						<left>5</left>
						<top>5</top>
						<width>140</width>
						<height>100</height>
						<aspectratio>scale</aspectratio>
						<texture>$INFO[ListItem.Art(thumb)]</texture>
					</control>

					<!-- Title -->
					<control type="label">
						<left>155</left>
						<top>10</top>
						<width>540</width>
						<height>30</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Subtitle (season/episode or year) -->
					<control type="label">
						<left>155</left>
						<top>40</top>
						<width>540</width>
						<height>25</height>
						<font>font12</font>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.Property(subtitle)]</label>
					</control>

					<!-- Snippet -->
					<control type="textbox">
						<left>155</left>
						<top>65</top>
						<width>540</width>
						<height>40</height>
						<font>font10</font>
						<textcolor>lightgrey</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>

					<!-- Relevance score -->
					<control type="label">
						<left>600</left>
						<top>10</top>
						<width>90</width>
						<height>25</height>
						<font>font10</font>
						<textcolor>green</textcolor>
						<align>right</align>
						<label>$INFO[ListItem.Property(relevance_score)]</label>
					</control>
				</itemlayout>

				<focusedlayout height="110" width="700">
					<!-- Result item layout (focused) -->
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>700</width>
						<height>110</height>
						<texture border="5">lists/focus.png</texture>
					</control>

					<!-- Thumbnail -->
					<control type="image">
						<left>5</left>
						<top>5</top>
						<width>140</width>
						<height>100</height>
						<aspectratio>scale</aspectratio>
						<texture>$INFO[ListItem.Art(thumb)]</texture>
					</control>

					<!-- Title -->
					<control type="label">
						<left>155</left>
						<top>10</top>
						<width>540</width>
						<height>30</height>
						<font>font13_title</font>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Subtitle (season/episode or year) -->
					<control type="label">
						<left>155</left>
						<top>40</top>
						<width>540</width>
						<height>25</height>
						<font>font12</font>
						<textcolor>lightgrey</textcolor>
						<label>$INFO[ListItem.Property(subtitle)]</label>
