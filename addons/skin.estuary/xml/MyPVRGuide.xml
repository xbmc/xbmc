							<control type="label" id="1">
								<left>6</left>
								<top>0</top>
								<width>50</width>
								<height>36</height>
								<aligny>center</aligny>
								<font>font12</font>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="image">
								<left>6</left>
								<top>35</top>
								<width>20</width>
								<height>20</height>
								<texture>$VAR[PVRTimerIcon]</texture>
