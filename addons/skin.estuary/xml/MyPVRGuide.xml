						<animation effect="fade" start="100" end="40" time="0" condition="!system.getbool(input.enablemouse)">Conditional</animation>
					</control>
				</control>
				<control type="group">
					<bottom>0</bottom>
					<height>300</height>
					<control type="image">
						<left>10</left>
						<width>240</width>
						<height>200</height>
