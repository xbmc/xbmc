							<param name="has_rulerdate_layout" value="true"/>
							<param name="ruler_width" value="150"/>
							<param name="ruler_label_width" value="150"/>
							<param name="channel_width" value="310"/>
							<param name="scrollbar_top" value="105"/>
						</include>
					</control>
