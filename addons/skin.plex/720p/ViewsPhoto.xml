				<label>$INFO[Container.FirstTitle]</label>
				<font>CondensedBold-36</font>
				<textcolor>white</textcolor>
				<shadowcolor>ff222222</shadowcolor>
			</control>
			<control type="label">
				<posy>0</posy>
