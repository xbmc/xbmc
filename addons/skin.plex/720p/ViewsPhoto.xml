<?xml version="1.0"?>
<includes>
	<!-- Common -->
	<include name="PhotoThumbCard">
		<control type="image">
			<posx>13</posx>
			<posy>130</posy>
			<width>122</width>
			<height>33</height>
			<include>Card</include>
			<animation effect="fade" start="0" end="40" time="0" condition="true">Conditional</animation>
		</control>
	</include>
	<include name="SelectedBorder">
		<control type="image">
			<posx>12</posx>
			<posy>12</posy>
			<width>124</width>
			<height>124</height>
			<include>Border</include>
		</control>
	</include>
	<include name="PhotoThumb">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>148</width>
			<height>148</height>
			<include>Shadow</include>
		</control>
		<control type="image">
			<description>Poster image</description>
			<posx>13</posx>
			<posy>13</posy>
			<width>122</width>
			<height>122</height>
			<texture background="true" diffuse="mask-square.png">$INFO[ListItem.Thumb]</texture>
			<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
		</control>
	</include>
	<include name="PhotoLabel">
			<posy>138</posy>
			<posx>76</posx>
			<width>110</width>
			<height>20</height>
			<align>center</align>
			<aligny>center</aligny>
			<label>$INFO[ListItem.Label]</label>
			<font>Condensed-14</font>
			<shadowcolor>ff222222</shadowcolor>
	</include>
	<!-- LibraryPhoto -->
	<include name="PlotBGLibrary">
