  <include name="WallMusicHor">
    <control type="panel" id="500">
      <viewtype label="$LOCALIZE[31234]">icon</viewtype>
      <include condition="!Skin.HasSetting(smallmusicwall)">WallWidthBig</include>
      <include condition="Skin.HasSetting(smallmusicwall)">WallWidthSmall</include>
      <posy>93</posy>
      <height>540</height>
      <pagecontrol>65</pagecontrol>
      <scrolltime>200</scrolltime>
      <onleft>500</onleft>
      <onright>500</onright>
      <onup>SetFocus(9000)</onup>
      <ondown>65</ondown>
      <orientation>horizontal</orientation>
      <visible>[Window.IsActive(pictures) | Window.IsActive(musicplaylist) |Window.IsActive(musicfiles) | Window.IsActive(musiclibrary) | Window.IsActive(AddonBrowser) | stringcompare(Container.FolderPath,addons://sources/video/) | Substring(Container.FolderPath,videodb://5)]+!Container.Content(genres)</visible>
      <include>WallMusicContent</include>
    </control>
    <control type="scrollbar" id="65">
      <posx>305</posx>
      <posy>670</posy>
      <width>670</width>
      <height>41</height>
      <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(500)|ControlGroup(9000).HasFocus">Conditional</animation>
      <texturesliderbackground border="14,0,14,0">views/scrollBarH.png</texturesliderbackground>
      <texturesliderbar border="14,0,14,0">views/scrollBarH_bar.png</texturesliderbar>
      <texturesliderbarfocus border="14,0,14,0">views/scrollBarH_bar_focus.png</texturesliderbarfocus>
      <textureslidernib>views/scrollBarNib.png</textureslidernib>
      <textureslidernibfocus>views/scrollBarNib.png</textureslidernibfocus>
      <pulseonselect>yes</pulseonselect>
      <onup>500</onup>
      <ondown>9000</ondown>
      <showonepage>false</showonepage>
      <orientation>horizontal</orientation>
    </control>
  </include>
  <include name="WallMusicVert">
    <control type="panel" id="500">
      <viewtype label="$LOCALIZE[31234]">icon</viewtype>
      <include condition="!Skin.HasSetting(smallmusicwall)">WallWidthBig</include>
      <include condition="Skin.HasSetting(smallmusicwall)">WallWidthSmall</include>
      <posy>93</posy>
      <height>532</height>
      <pagecontrol>65</pagecontrol>
      <scrolltime>200</scrolltime>
      <onleft>9000</onleft>
      <onright>65</onright>
      <onup>500</onup>
      <ondown>500</ondown>
      <orientation>vertical</orientation>
      <visible>[Window.IsActive(pictures) | Window.IsActive(musicplaylist) |Window.IsActive(musicfiles) | Window.IsActive(musiclibrary) | Window.IsActive(AddonBrowser) | stringcompare(Container.FolderPath,addons://sources/video/) | Substring(Container.FolderPath,videodb://5)]+!Container.Content(genres)</visible>
