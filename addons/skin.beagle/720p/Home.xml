	      <posx>0</posx>
	      <posy>0</posy>
	      <width>256</width>
	      <height>72</height>
			  <label>Weather</label>
        <align>center</align>
        <aligny>center</aligny>
        <font>HomeListLabel</font>
        <textcolor>grey</textcolor>
	      <texturefocus>Highlight256x72.bmp</texturefocus>
