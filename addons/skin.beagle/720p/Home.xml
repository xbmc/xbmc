      <control type="button" id="105">
	      <description>My Settings normal push button</description>
	      <posx>0</posx>
	      <posy>304</posy>
	      <width>256</width>
	      <height>72</height>
			  <label>Settings</label>
        <align>center</align>
        <aligny>center</aligny>
        <font>HomeListLabel</font>
        <textcolor>grey</textcolor>
	      <texturefocus>Highlight256x72.bmp</texturefocus>
	      <texturenofocus>-</texturenofocus>
        <pulseonselect>false</pulseonselect>
