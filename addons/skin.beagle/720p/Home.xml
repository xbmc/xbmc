	<controls>

    <control type="image">
      <width>1280</width>
      <height>720</height>
      <texture>BackgroundHome.jpg</texture>
    </control>

    <control type="group"  id="100">
      <posx>10</posx>
      <posy>172</posy>
      <height>376</height>
      <width>256</width>

