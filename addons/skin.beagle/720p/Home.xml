	      <posy>228</posy>
	      <width>256</width>
	      <height>72</height>
			  <label>Photos</label>
        <align>center</align>
        <aligny>center</aligny>
        <font>HomeListLabel</font>
        <textcolor>white</textcolor>
	      <onclick>ActivateWindow(MyPictures)</onclick>
