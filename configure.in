  # libcurl
  LIBCURL_BASENAME=$(gcc $CFLAGS -print-file-name=libcurl.so | \
                     while read output; do objdump -p $output | \
                     grep SONAME | \
                     awk 'BEGIN { FS = " " } ; { print $2 }'; done)
