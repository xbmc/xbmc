WORKSPACE=${WORKSPACE:-$( cd $(dirname $0)/../../.. ; pwd -P )}
XBMC_PLATFORM_DIR=webos
. $WORKSPACE/tools/buildsteps/defaultenv

TARGET=ipk

cd $WORKSPACE/build;make -j$BUILDTHREADS $TARGET

cd $WORKSPACE/build

#rename for upload
#e.x. xbmc-20130314-8c2fb31.ipk
UPLOAD_FILENAME="org.xbmc.kodi-$(getBuildRevDateStr)"
mv org.xbmc.kodi*.ipk $UPLOAD_FILENAME.ipk
