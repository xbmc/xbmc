+			echo "Installing $f as $FNAME"
+			touch "$FNAME"
+			$MSGFMT -f -o "$FNAME" "$f"
+			if test ! -f "$FNAME"; then
+				echo "Cannot install $FNAME. Does $USER have privileges?"
+				exit 1
+			fi
+			chmod 0644 "$FNAME"
+		elif test "$mode" = 'uninstall'; then
