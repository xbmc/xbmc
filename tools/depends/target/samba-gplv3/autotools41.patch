+
+[ -d $PIDL_OUTPUTDIR ] || mkdir -p $PIDL_OUTPUTDIR || exit 1
+
+PIDL_DIR=`dirname $PIDL`
+PIDL_CMD="$PIDL $ARGS"
+
+if [ $FULL = 1 ]; then
+	echo "Rebuilding all idl files"
+	$PIDL_CMD $IDL_FILES || exit 1
+	exit 0
