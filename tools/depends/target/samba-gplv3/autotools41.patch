+	MODULE=`basename $dir`
+	for f in $SRCDIR/locale/$MODULE/*.po; do
+		BASE=`basename $f`
+		LANGUAGE=`echo $BASE | sed 's/\.po//g'`
+		if test "$LANGUAGE" = '*'; then
+			echo "No .po file exists!"
+			exit 0
+		fi
+		FNAME="$DESTDIR/$LOCALEDIR/$LANGUAGE/LC_MESSAGES/$MODULE.mo"
