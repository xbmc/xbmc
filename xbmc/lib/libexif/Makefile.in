ARCH=@ARCH@

OBJS +=libexif.o ExifParse.o IptcParse.o JpegParse.o
CFLAGS +=-D_LINUX -D_DLL -fPIC -O2

SYSDIR=../../../system
SO=libexif-$(ARCH).so
LIB=../../../system/$(SO)

$(LIB): $(OBJS)
ifeq ($(findstring osx,$(ARCH)), osx)
	gcc $(CFLAGS) -bundle -flat_namespace -undefined suppress -shared -fPIC -o $@ $(OBJS)
	../../../tools/Mach5/wrapper.rb $@;mv output.so $@
else
	$(CC) -shared -o $@ $(OBJS) \
		`cat ../../cores/DllLoader/exports/wrapper.def` ../../cores/DllLoader/exports/wrapper.o
endif

include ../../../Makefile.include
