SRCS += Encoders/AEEncoderFFmpeg.cpp

LIB   = audioengine.a

include @abs_top_srcdir@/Makefile.include
-include $(patsubst %.cpp,%.P,$(patsubst %.c,%.P,$(SRCS)))
