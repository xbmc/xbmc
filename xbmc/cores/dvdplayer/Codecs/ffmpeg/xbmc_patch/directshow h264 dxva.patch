+void ff_directshow_h264_fill_slice_long(MpegEncContext *s)
+{
+	H264Context *h = s->avctx->priv_data;
+	directshow_dxva_h264 *pict;
+	int						field_pic_flag;
+	unsigned int			i,j,k;
