ARCH=@ARCH@

.PHONY: compile

CFLAGS+=-DHAS_ALSA

SRCS=spotifyCodec.cpp ADPCMCodec.cpp \
     AudioDecoder.cpp \
     CDDAcodec.cpp \
     CodecFactory.cpp \
     DVDPlayerCodec.cpp \
     FLACcodec.cpp \
     ModplugCodec.cpp \
     MP3codec.cpp \
     NSFCodec.cpp \
     OggCallback.cpp \
     OGGcodec.cpp \
     PAPlayer.cpp \
     ReplayGain.cpp \
     SIDCodec.cpp \
     TimidityCodec.cpp \
     VGMCodec.cpp \
     WAVcodec.cpp \
     YMCodec.cpp \

ifeq (@USE_ASAP_CODEC@,1)
  SRCS+=ASAPCodec.cpp
endif

ifneq ($(findstring osx,$(ARCH)), osx)
  CXXFLAGS+=-DHAS_ALSA
endif

ifneq ($(ARCH), arm)
  CXXFLAGS+=-DHAS_SPC_CODEC
  SRCS+=SPCCodec.cpp
endif

LIB=paplayer.a

include @abs_top_srcdir@/Makefile.include
-include $(patsubst %.cpp,%.P,$(patsubst %.c,%.P,$(SRCS)))
