+                free(data);
+                return Respond(220, "%lu Bytes submitted", count_written);
+            }
+            else {
+                return Respond(501, "Missing position");
+            }
+        }
+        else {
+            return Respond(501, "Missing size");
+        }
+    }
+    else {
+        return Respond(501, "Missing position");
+    }
