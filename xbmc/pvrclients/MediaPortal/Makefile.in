LIBS_LIVE555 = lib/live555/BasicUsageEnvironment/libBasicUsageEnvironment.a lib/live555/UsageEnvironment/libUsageEnvironment.a lib/live555/libgroupsock.a lib/live555/liveMedia/libliveMedia.a
LIBS   = lib/tinyxml/tinyxml.a lib/tsreader/tsreader.a -ldl -lpthread
LIBDIR = @abs_top_srcdir@/addons/pvr.team-mediaportal.tvserver
LIB    = $(LIBDIR)/XBMC_MPTV.pvr

SRCS   = channels.cpp \
	client.cpp \
	epg.cpp \
	pvrclient-mediaportal.cpp \
	recordings.cpp \
	timers.cpp \
	Socket.cpp \
	uri.cpp \
	utils.cpp \
	Cards.cpp \
	GenreTable.cpp

include ../Makefile.include

#DEFINES+=-DLIVE555
INCLUDES += -I@abs_top_srcdir@/xbmc/filesystem

clean:
	-rm -f $(OBJS) $(LIB) *.P *~
	$(MAKE) -C lib/tinyxml clean
	#$(MAKE) -C lib/live555 clean
	$(MAKE) -C lib/tsreader clean

$(LIB): $(OBJS)
	$(MAKE) -C lib/tinyxml
	#$(MAKE) -C lib/live555
	$(MAKE) -C lib/tsreader
	$(SILENT_CPP) $(CXX) $(CXXFLAGS) $(LDFLAGS) -shared -g $(OBJS) $(LIBS) $(LIBDIRS) $(SILIB) -o $(LIB)
