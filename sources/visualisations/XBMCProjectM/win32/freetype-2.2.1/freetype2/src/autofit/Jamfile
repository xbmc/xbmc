SubDir FT2_TOP src autofit ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = afangles afglobal afhints aflatin afloader afmodule afdummy afwarp ;
  }
  else
  {
    _sources = autofit ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

# end of src/autofit Jamfile
